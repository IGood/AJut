<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:AJut.Application.Controls">
    <Style TargetType="{x:Type local:StackNavBusyWaitOverlay}">
        <Setter Property="Foreground" Value="#DDD"/>
        <Setter Property="MessageContent" Value="Please wait..."/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:StackNavBusyWaitOverlay}">
                    <Grid Margin="5">
                        <Grid.Effect>
                            <DropShadowEffect BlurRadius="2" ShadowDepth="5"/>
                        </Grid.Effect>
                        <ContentControl Content="{TemplateBinding MessageContent}" ContentTemplate="{TemplateBinding MessageContentTemplate}" ContentTemplateSelector="{TemplateBinding MessageContentTemplateSelector}"
                                        FontSize="32" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <local:BusyWait HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>