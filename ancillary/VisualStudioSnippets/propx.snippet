<?xml version="1.0" encoding="UTF-8"?>
<CodeSnippets xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
	<CodeSnippet Format="1.0.0">
		<Header>
			<Title>Add a DPUtils Registration</Title>
			<Author>AJ Badarni</Author>
			<Description>Adds code to register a read-write DependencyProperty. This snippet must be added to a class that derives from DependencyObject.</Description>
			<Shortcut>propx</Shortcut>
			<SnippetTypes>
				<SnippetType>Expansion</SnippetType>
			</SnippetTypes>
		</Header>
		<Snippet>
			<Declarations>
				<Literal>
					<ID>propertyType</ID>
					<ToolTip>Replace with the type of the property.</ToolTip>
					<Default>string</Default>
				</Literal>
				<Literal>
					<ID>fieldName</ID>
					<ToolTip>Replace with the name of the property.</ToolTip>
					<Default>m_</Default>
				</Literal>
				<Literal>
					<ID>propertyName</ID>
					<ToolTip>Replace with the name of the property.</ToolTip>
					<Default>Prop1</Default>
				</Literal>
			</Declarations>
			<Code Language="csharp">
				<![CDATA[
          private $propertyType$ $fieldName$;
          public $propertyType$ $propertyName$
          {
			get => $fieldName$;
			set => this.SetAndRaiseIfChanged(ref $fieldName$, value);
          }
          ]]>
			</Code>
		</Snippet>
	</CodeSnippet>
</CodeSnippets>

