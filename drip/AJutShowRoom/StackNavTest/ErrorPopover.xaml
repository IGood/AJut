<UserControl x:Class="AJutShowRoom.StackNavTest.ErrorPopover"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="Self">
    <DockPanel>
        <Border BorderBrush="Black" BorderThickness="0,1,0,0" DockPanel.Dock="Bottom">
            <Button Content="Ok" Width="100" FontSize="18" Margin="5" HorizontalAlignment="Right" Click="Ok_OnClick"/>
        </Border>
        <TextBlock Text="{Binding ElementName=Self, Path=ErrorText}" Margin="10" FontSize="18" TextWrapping="WrapWithOverflow" MaxWidth="350"/>
    </DockPanel>
</UserControl>
