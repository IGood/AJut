<UserControl x:Class="AJutShowRoom.StackNavTest.SecondDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AJutShowRoom.StackNavTest"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="Self">
    <StackPanel>
        <TextBlock Text="{Binding ElementName=Self, Path=NumberFromFirst}"/>
        <Button Content="Run BusyWait for 2s" Click="RunSpinWait_OnClick"/>
        <CheckBox Content="Allow Close" IsChecked="{Binding ElementName=Self, Path=AllowClose, Mode=TwoWay}"/>
    </StackPanel>
</UserControl>
